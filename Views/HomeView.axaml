<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:WildflyViewLog.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WildflyViewLog.Views.HomeView"
			 xmlns:viewModels="clr-namespace:WildflyViewLog.ViewModels"
			 x:DataType="vm:HomeViewModel">

	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:HomeViewModel />
	</Design.DataContext>

	<StackPanel>
		<Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto" ColumnDefinitions="*, Auto">

			<TextBlock Grid.ColumnSpan="2"
					   Text="LOG VIEWER"
					   HorizontalAlignment="Center"
					   Margin="0,10,0,10"
					   FontSize="16"
					   FontWeight="Bold" />

			<TextBox Grid.Row="1"
					 Grid.Column="0"
					 Name="PathTextBox"
					 Watermark="FilePath"
					 Text="{Binding FilePath, Mode=TwoWay}"
					 Margin="5"
					 IsEnabled="False" />
			<Button Grid.Row="1"
					Grid.Column="1"
					Command="{Binding OpenFileCommand}"
					Content="Abrir"
					Margin="5"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					Background="#2f5690" />

			<ComboBox Grid.Row="2"
					  Grid.Column="0"
					  Name="SelectionLog"
					  ItemsSource="{Binding SelectionItems}"
					  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
					  Margin="5"
					  HorizontalAlignment="Stretch" />
			<Button Grid.Row="2"
					Grid.Column="1"
					Command="{Binding SaveFileCommand}"
					Content="Guardar"
					Margin="5"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					Background="#2f5690" />
		</Grid>

		<TextBlock Text="Filtrar"
				   HorizontalAlignment="Center"
				   Margin="0,10,0,10" FontSize="14" />

		<Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, *">

			<TextBox Grid.Row="0"
					 Grid.Column="0"
					 Name="SearchTextBox"
					 Watermark="Buscar desde..."
					 Text="{Binding SearchInFilePath, Mode=TwoWay}"
					 Margin="5" />
			<CheckBox Grid.Row="0"
					  Grid.Column="1"
					  IsChecked="{Binding CheckRelated}">Incluir Carpeta base</CheckBox>
		</Grid>
	</StackPanel>
</UserControl>